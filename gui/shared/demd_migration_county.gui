types MigrationCounty
{
    type migration_county_breakdown_widget = widget
    {
        alwaystransparent = no
        using = GeneralTooltipSetup
        widget = {
            name = "background"
            using = DefaultTooltipBackground
            size = { 100% 100% }
            alwaystransparent = no
			max_width = 450
        }
        vbox = {
            set_parent_size_to_minimum = yes
            margin = { 20 10 }
            margin_bottom = 20
            spacing = 3

            text_multi = {
                layoutpolicy_horizontal = expanding
                raw_text = "#T @icon_migration!# Total Annual [demd_migration|E]:#! [Province.GetCounty.GetTitle.MakeScope.ScriptValue('total_migration_growth_percent')|%1]#!"
                align = left
				max_width = 450
            }

            vbox = {
                layoutpolicy_horizontal = expanding
                layoutpolicy_vertical = expanding
                #margin = { 0 4 }
                spacing = -1

                text_multi = {
                    layoutpolicy_horizontal = expanding
                    raw_text = "#weak [demd_population|E] can migrate both between neighboring [counties|E] and within a [county|E] based on relative [demd_migration_pull|E]. The larger the difference in pull, the more people will migrate.#!"
                    align = left
					autoresize = yes
					max_width = 400
                }
				spacer = { size = { 0 14 } }
				text_multi = {
                    layoutpolicy_horizontal = expanding
                    raw_text = "Annual External [demd_migration|E]:#! [Province.GetCounty.GetTitle.MakeScope.Var('migration_growth_percent').GetValue|%1]"
                    align = left
					autoresize = yes
					max_width = 400
                }
				text_multi = {
                    layoutpolicy_horizontal = expanding
                    raw_text = "Annual Internal [demd_migration|E]:#! [Province.GetCounty.GetTitle.MakeScope.Var('internal_migration_growth_percent').GetValue|%1]"
                    align = left
					autoresize = yes
					max_width = 400
                }
				spacer = { size = { 0 14 } }
				text_multi = {
                    layoutpolicy_horizontal = expanding
					tooltipwidget = { 
						migration_pull_county_breakdown_widget = { 
						
						} 
					}
                    raw_text = "#bold [demd_migration_pull|E]:#! [Province.GetCounty.GetTitle.MakeScope.Var('migration_pull').GetValue|%0]#!"
                    align = left
					autoresize = yes
					max_width = 400
                }                 				
            }
        }
    }
}
