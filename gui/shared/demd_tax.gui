					tooltipwidget = {
						widget_value_breakdown_tooltip = {}
					}
				}
				spacer = { size = { 0 14 } }
				text_multi = {
					layoutpolicy_horizontal = expanding
					raw_text = "[county|E] Raid [gold|E] (spared): [Province.GetCounty.GetTitle.MakeScope.ScriptValue('demd_raid_spared_gold_value')|1]"
					align = left
					autoresize = yes
					max_width = 400
					datacontext = "[GuiScope.SetRoot(Province.GetCounty.GetTitle.MakeScope).GetScriptValueBreakdown('demd_raid_spared_gold_value')]"
					tooltipwidget = {
						widget_value_breakdown_tooltip = {}
					}
				}
				text_multi = {
					layoutpolicy_horizontal = expanding
					raw_text = "[county|E] Raid [gold|E] (plundered): [Province.GetCounty.GetTitle.MakeScope.ScriptValue('demd_raid_plunder_gold_value')|1]"
					align = left
					autoresize = yes
					max_width = 400
					datacontext = "[GuiScope.SetRoot(Province.GetCounty.GetTitle.MakeScope).GetScriptValueBreakdown('demd_raid_plunder_gold_value')]"
					tooltipwidget = {
						widget_value_breakdown_tooltip = {}
					}
				}
            }
        }
    }
}
